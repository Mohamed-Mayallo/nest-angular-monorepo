{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nest-angular-monorepo/auth-store": ["libs/auth-store/src/index.ts"],
      "@nest-angular-monorepo/material": ["libs/material/src/index.ts"],
      "@nest-angular-monorepo/types": ["libs/types/src/index.ts"],
      "@nest-angular-monorepo/validation": ["libs/validation/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
